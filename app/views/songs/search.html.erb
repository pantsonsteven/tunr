
<div class="container">



<% @songs.each do |song|%>
    <div class="twelve columns">

        <div class="ten columns">
            <h2><%= song[:title] %></h2>
            <h4><%= song[:artist_name] %></h4>
        </div>

        <img src="<%= song[:artwork_link] %>" alt="">
       
        <form action="/songs/save" method="post">
            <%= token_tag %>
            <input type="hidden" name="track_id" value="<%= song[:itunes_song_id] %>">
            <button type="submit">Save</button>
        </form>

    </div>

<% end %>




</div>